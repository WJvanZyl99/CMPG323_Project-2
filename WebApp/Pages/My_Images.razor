@page "/my-images"
@inject StateContainer StateContainer

<h3>My Images</h3>
<h3>@StateContainer.user.Images.Count</h3>

<table style="width:100%;">
    @for(int i = 0; i < images.Count(); i++)
     {
         <tr>
              @for(int j = 0; j < 3; j++)
              {
                 <td>
                     <img src="@images[i].Name" alt="" />
                 </td>
                 i++;
              }
         </tr>
     }
</table>

@code {

    List<Database.Models.Image> images;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        images = StateContainer.user.Images.ToList();
    }

    int getRowCount()
    {
        return (images.Count() - images.Count() % 3) / 3;
    }

}
